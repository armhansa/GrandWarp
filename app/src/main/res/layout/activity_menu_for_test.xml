<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".for_test.MenuForTest"
    android:orientation="vertical"
    android:padding="15dp">

    <Button
        android:id="@+id/toNavigationBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Navigation Activity"
        android:textSize="25sp"
        android:onClick="toNavigationTest"/>

    <Button
        android:id="@+id/toMessageTestBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Message Activity"
        android:textSize="25sp"
        android:onClick="toMessageTest"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="For Go To Another Activities"
        android:textSize="20sp"
        android:gravity="bottom|center_horizontal"/>

</LinearLayout>