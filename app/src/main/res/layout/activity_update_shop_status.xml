<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UpdateShopStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Name"
            android:textSize="40sp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/switchBtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#008400"
            android:layout_gravity="center"
            android:onClick="switchNow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#969696"
            android:layout_gravity="center"
            android:text="Close in 10 minutes"
            android:textSize="25sp"
            android:onClick="switchIn10Min"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#969696"
            android:layout_gravity="center"
            android:text="Close in 20 minutes"
            android:textSize="20sp"
            android:onClick="switchIn20Min"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete"
            android:textSize="20sp"
            android:textColor="#F00"
            android:onClick="deleteShop"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/infoBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_menu_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="openShopInfo"/>

</android.support.constraint.ConstraintLayout>